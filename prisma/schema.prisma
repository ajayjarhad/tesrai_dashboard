generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Additional fields for our application
  passwordHash         String?
  role                  String   @default("USER")
  displayName           String?
  mustResetPassword     Boolean  @default(false)
  tempPasswordHash      String?
  tempPasswordExpiry    DateTime?
  isActive              Boolean  @default(true)

  // Relations
  accounts    Account[]
  sessions    Session[]
  robots      Robot[]
  operations  Operation[]

  @@map("users")
}

// Account model for OAuth and social providers
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Session model for authentication
model Session {
  // Use string IDs because Better Auth generates session IDs that are not Mongo ObjectIds
  id         String   @id @map("_id") @db.String
  token      String   @unique @map("sessionToken")
  userId     String   @db.ObjectId
  expiresAt  DateTime
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Verification model for email verification
model Verification {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  value      String
  expires    DateTime

  @@unique([identifier, value])
  @@map("verifications")
}

// Robot model for dashboard
model Robot {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  status      String   @default("inactive")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  ownerId     String   @db.ObjectId

  // Robot configuration
  model        String?
  serialNumber String?
  lastSeen     DateTime?

  // Relations
  owner      User         @relation(fields: [ownerId], references: [id])
  operations Operation[]

  @@map("robots")
}

// Operation model for robot actions
model Operation {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  robotId     String   @db.ObjectId
  operatorId  String   @db.ObjectId

  // Operation details
  type        String
  parameters  Json?
  result      Json?
  error       String?
  startedAt   DateTime?
  completedAt DateTime?

  // Relations
  robot     Robot @relation(fields: [robotId], references: [id])
  operator  User  @relation(fields: [operatorId], references: [id])

  @@map("operations")
}

{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "verbatimModuleSyntax": false,
    "noUncheckedIndexedAccess": false,
    "paths": {
      "@tensrai/shared": ["./src/types/shared-shim.d.ts"],
      "@tensrai/shared/*": ["./src/types/shared-shim.d.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
